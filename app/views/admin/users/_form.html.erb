    <%= form_for [:admin, @user] do |f| %>
    <div class="card-body">
      <div class="form-group">
        <div class="row">
          <div class="col-sm-4">
            <%= image_tag("default-ava.jpeg", size: "50x50", class: "rounded-circle", id: "img_prev") %>
          </div>
          <div class="col-sm-8">
            <%= f.file_field :avatar, class: "upload-img" %>
          </div>
        </div>
      </div>
      <div class="form-group">
          <%= f.label t("name"), class: "required" %>
          <p class='error'><%= show_errors(@user, :name) %></p>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: t("ex_name") %>
      </div>

      <div class="form-group">
          <%= f.label t("email"), class: "required" %>
          <p class='error'><%= show_errors(@user, :email) %></p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("ex_mail") %>
      </div>

      <div class="form-group">
          <%= f.label t("phone"), class: "required" %>
          <p class='error'><%= show_errors(@user, :phone) %></p>
          <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control", placeholder: t("ex_phone") %>
      </div>

      <div class="form-group">
          <%= f.label t("birth"), class: "required" %>
          <p class='error'><%= show_errors(@user, :birth) %></p>
          <%= f.date_field :birth, autofocus: true, autocomplete: "birth", max: Date.today, class: "form-control" %>
      </div>

      <div class="form-group">
          <%= f.label t("pwd"), class: "required" %>
          <p class='error'><%= show_errors(@user, :password) %></p>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
          <%= f.label t("pwd_cf"), class: "required" %>
          <p class='error'><%= show_errors(@user, :password_confirmation) %></p>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="actions" style="margin-top: 2rem;
      text-align: right;">
      <%= f.submit t("create_user"), class: "btn btn-success" %>
    </div>
      <% end %>
