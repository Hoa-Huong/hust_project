<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= t "demand_detail" %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#"><%= t "home" %></a></li>
          <li class="breadcrumb-item"><a href="#"><%= t "demand" %></a></li>
          <li class="breadcrumb-item active"><%= t "demand_detail" %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10 demand-detail">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title"><%= t "demand_detail" %>: <%= @demand.title %></h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <strong>
              <i class="fas fa-user"> <%= t "demander" %>: </i>
            </strong>
            <%= link_to admin_user_path(@demand.user) do %>
              <span class="text-muted name" title="Thông tin cá nhân">
                <%= @demand.user_name %>
              </span>
            <% end %>
            <hr>

            <strong>
              <i class="fas fa-book mr-1"></i><%= t "subject" %>:
            </strong>
            <span class="text-muted"><%= @demand.subject %> </span>

            <strong class="level_class">
              <i class="fas fa-book mr-1"></i><%= t "level_class" %>:
            </strong>
            <span class="text-muted"><%= @demand.level_class %> </span>
            <hr>

            <div class="row">
              <div class="col-sm-3">
                <strong>
                  <i class="fas fa-book mr-1"></i><%= t "number_student" %>:
                </strong>
                <span class="text-muted"><%= @demand.number_student %> </span>
              </div>
              <div class="col-sm-4">
                <strong>
                  <i class="fas fa-book mr-1"></i><%= t "time_per_session" %>:
                </strong>
                <span class="text-muted"><%= @demand.time_per_session %> </span>
              </div>
              <div class="col-sm-5">
                <strong>
                  <i class="fas fa-book mr-1"></i><%= t "fee" %>:
                </strong>
                <span class="text-muted"><%= @demand.fee %> VNĐ</span>
              </div>
            </div>
            <hr>

            <strong><i class="fas fa-map-marker-alt mr-1"></i> <%= t "address" %></strong>

            <span class="text-muted"><%= @demand.address_detail %> <%= @demand.district_name %> <%= @demand.province_name %></span>
            <hr>

            <strong><i class="far fa-file-alt mr-1"></i> <%= t "note" %></strong>

            <p class="text-muted"><%= @demand.note %></p>
            <hr>

            <%= render "button_edit_status" %>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
</section>

