<div class="container-fluid">
  <div class="row chart">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <%= line_chart TeachOffer.approved.includes(:demand).group_by_day(:updated_at).sum(:fee) %>
      <p class="chart"><%= t "chart_fee" %></p>
    </div>
    <div class="col-sm-6">
      <%= line_chart User.group_by_day(:created_at).count %>
      <p class="chart"><%= t "chart_user" %></p>
    </div>
    <div class="col-sm-6">
      <%= line_chart Teacher.group_by_day(:created_at).count %>
      <p class="chart"><%= t "chart_teacher" %></p>
    </div>
    <div class="col-sm-6">
      <%= line_chart Demand.group_by_day(:created_at).count %>
      <p class="chart"><%= t "chart_demand" %></p>
    </div>
    <div class="col-sm-6">
      <%= line_chart TeachOffer.group_by_day(:created_at).count %>
      <p class="chart"><%= t "chart_teach_offer" %></p>
    </div>
  </div>
</div>
