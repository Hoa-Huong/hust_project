
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= t "manage_teacher" %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to t("home"), admin_dashboard_path %></li>
          <li class="breadcrumb-item"><%= t("manage_revenue") %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="container-fluid">
      <div class="row chart">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
          <%= line_chart admin_charts_teach_offers_approved_path %>
          <p class="chart"><%= t "chart_fee" %></p>
        </div>
        <div class="col-sm-6">
          <%= line_chart admin_charts_users_path %>
          <p class="chart"><%= t "chart_user" %></p>
        </div>
        <div class="col-sm-6">
          <%= line_chart admin_charts_teachers_path %>
          <p class="chart"><%= t "chart_teacher" %></p>
        </div>
        <div class="col-sm-6">
          <%= line_chart admin_charts_demands_path %>
          <p class="chart"><%= t "chart_demand" %></p>
        </div>
        <div class="col-sm-6">
          <%= line_chart admin_charts_teach_offers_path %>
          <p class="chart"><%= t "chart_teach_offer" %></p>
        </div>
      </div>
    </div>
  </div>
</section>
