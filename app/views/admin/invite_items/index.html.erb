<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= t "invitation" %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to t("home"), admin_dashboard_path %></li>
          <li class="breadcrumb-item"><%= link_to t("demand"), admin_demands_path %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
