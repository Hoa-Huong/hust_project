      <div class="card">
        <div class="card-body">
          <table id="example1" class="table table-bordered table-striped invite_items">
            <thead>
              <tr>
                <th></th>
                <th><%= t "invitor" %></th>
                <th><%= t "teacher" %></th>
                <th><%= t "demand" %></th>
                <th><%= t "status" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @invite_items %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
