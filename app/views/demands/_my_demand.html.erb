<section class="header-study-group bg-gradient-blue">
  <div class="container">
    <div class="row">
      <h1>
        <div class="col-md-12 col-sm-12" style="padding:20px !important;font-size: 26px; margin-top: -13px;">
          <%= link_to edit_demand_path demand do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <%= demand.title %>
          <% end %>
        </div>
      </h1>
      <div class="col-md-9 col-sm-8">
        <p class="create inline" style="padding-right: 20px;">
          <i class="fa fa-calendar"></i>
          <%= demand.updated_at.strftime("%F %H:%M") %>
        </p>
      </div>
      <div class="col-md-3 col-sm-4">
        <p class="name inline" style="padding-right: 20px;">
          <i class="fa fa-user-o"></i>
          <%= link_to "#" do %>
          <%= demand.user_name %>
          <% end %>
        </p>
      </div>
      <!--Kiểu lớp: Tìm GIA SƯ-->
      <div class="row" style="margin: 105px 0;border-top: 1px solid #e7e7e7;padding: 10px;">
        <div class="col-md-4 col-sm-4">
          <p class="no-padding">
            <i class="fa fa-bookmark"></i><%= t "status" %>:
            <span style="font-weight: bold; color: #ff961e; text-transform: uppercase;">
              <% if demand.notFound? %>
              <%= t "finding" %>
              <% else %>
              <%= t "found" %>
              <% end %>
            </span>
          </p>
          <p class="no-padding">
            <i class="fa fa-book"></i>
            <%= t "subject" %>:&nbsp;<%= demand.subject %>
          </p>
          <p class="no-padding">
            <i class="fa fa-book"></i>
            <%= t "class" %> :&nbsp;<%= demand.level_class %>
          </p>
        </div>
        <div class="col-md-3 col-sm-3">
          <p>
            <i class="fa fa-user-o"></i>
            <%= t "number_student" %> : <%= demand.number_student %>
          </p>
          <p>
            <i class="fa fa-money"></i>
            <%= t "fee" %>:
            <span class="class-tutor-fee"><%= number_to_currency(demand.fee) %></span>
          </p>
          <p>
            <i class="fa fa-history"></i>
            <%= t "time_per_session" %>:
            <span class="class-tutor-fee"><%= demand.time_per_session %> h/buổi</span>
          </p>
        </div>
        <div class="col-md-5 col-sm-5">
          <p>
            <i class="fa fa-address-card"></i>
            <%= t "detail_address" %>:
            <span class="class-tutor-fee"><%= demand.address_detail %> <%= demand.district_name%> <%= demand.province_name %> </span>
          </p>
          <p>
            <i class="fa fa-sticky-note"></i>
            <%= t "note_" %>: <br>
            <span class="class-tutor-fee"><%= demand.note %> </span>
          </p>
        </div>
        <div class="col-sm-3 col-sm-push-2">
          <div class="action-group text-right show-when-hover">
            <%= link_to t("teach_offer"), "#", class: "btn-yellow btn ctools-use-modal ctools-use-modal-processed" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
