<div class="row demands">
  <div class="col-sm-10 col-sm-push-1">
    <div class="row search">
      <%= search_form_for @search do |f| %>
        <div class="form-group">
          <div class="col-sm-1">
            <%= f.label t("search") %>:
          </div>
          <div class="col-sm-2">
            <div class="search-header">
              <div class="form-item form-type-textfield form-item-key">
                <%= f.collection_select :province_id_eq, Province.order(:name), :id, :name, prompt: t("province"), class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="search-header">
              <div class="form-item form-type-textfield form-item-key">
                <%= f.grouped_collection_select :district_id_eq, Province.order(:name), :districts, :name, :id, :name, prompt: t("district"), class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="search-header">
              <div class="form-item form-type-textfield form-item-key">
                <%= f.search_field :subject_cont_any, placeholder: "Tìm theo môn học", class: "form-control form-text" %>
              </div>
            </div>
          </div>
          <div class="col-sm-2">
            <div class="search-header">
              <div class="form-item form-type-textfield form-item-key">
                <%= f.search_field :level_class_cont_any, placeholder: "Tìm theo trình độ", class: "form-control form-text" %>
              </div>
            </div>
          </div>
          <div class="col-sm-1">
            <%= f.submit t("search"), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="view-header">
      <span><%= t "new_demand" %></span>
    </div>
    <%= render @demands %>
    <%= paginate @demands %>
  </div>
</div>
