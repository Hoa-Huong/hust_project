<div class="container">
  <div class="row">
    <div class="login col-sm-6 col-sm-push-3">
      <h2 style="text-align: center; margin-top: 0px;"><%= t "edit_profile" %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-2">
              <%= image_tag(current_user.avatar, size: "125x125", class: "rounded-circle") %>
            </div>
            <div class="col-sm-10">
              <%= f.file_field :avatar, class: "upload-img" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6">
            <div class="input-group">
              <p class='error'><%= show_errors(@user, :name) %></p>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input--style-2", placeholder: t("ex_name") %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="input-group">
              <p class='error'><%= show_errors(@user, :birth) %></p>
              <%= f.date_field :birth, autofocus: true, autocomplete: "birth", max: Date.today, class: "input--style-2" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6">
            <div class="input-group">
              <p class='error'><%= show_errors(@user, :email) %></p>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input--style-2", placeholder: t("ex_mail") %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="input-group">
              <p class='error'><%= show_errors(@user, :phone) %></p>
              <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "input--style-2", placeholder: t("ex_phone") %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <div class="input-group">
              <p class='error'><%= show_errors(@user, :current_password) %></p>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input--style-2", placeholder: t("current_pwd") %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6">
            <div class="input-group">
            <p class='error'><%= show_errors(@user, :password) %></p>
              <%= f.password_field :password, autocomplete: "new-password", class: "input--style-2", placeholder: t("ex_pwd") %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="input-group">
              <p class='error'><%= show_errors(@user, :password_confirmation) %></p>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input--style-2", placeholder: t("ex_pwd_conf") %>
            </div>
          </div>
        </div>
        <div class="form-teacher-edit">
          <%= f.fields_for :teacher do |ff| %>
            <h2>Hồ sơ gia sư</h2>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-2">
                  <%= image_tag("certificates-default.jpg", size: "50x50", class: "rounded-circle", id: "img_prev") %>
                </div>
                <div class="col-sm-3">
                  <%= ff.file_field :diploma, class: "upload-img" %>
                </div>
              </div>
            </div>

            <div class="col-sm-12">
              <div class="input-group">
                <p class='error'><%= show_errors(@user, :graduate) %></p>
                <%= ff.text_field :graduate, autofocus: true, autocomplete: "name", class: "input--style-2", placeholder: t("ex_graduate") %>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="input-group">
                <p class='error'><%= show_errors(@user, :address) %></p>
                <%= ff.text_field :address, autofocus: true, autocomplete: "name", class: "input--style-2", placeholder: t("ex_addr") %>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="input-group">
                <p class='error'><%= show_errors(@user, :subject) %></p>
                <%= ff.text_field :subject, autofocus: true, autocomplete: "name", class: "input--style-2", placeholder: t("ex_suject_teach") %>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="input-group">
                <p class='error'><%= show_errors(@user, :level_study) %></p>
                <%= ff.text_field :level_study, autofocus: true, autocomplete: "name", class: "input--style-2", placeholder: t("ex_level_study") %>
              </div>
            </div>
            <div class="col-sm-6">
              <p class='error'><%= show_errors(@user, :province_id) %></p>
              <%= ff.collection_select :province_id, Province.order(:name), :id, :name, prompt: t("province") %>
            </div>
            <div class="col-md-6">
              <p class='error'><%= show_errors(@user, :district_id) %></p>
              <%= ff.grouped_collection_select :district_id, Province.order(:name), :districts, :name, :id, :name, prompt: t("district") %>
            </div>
            <div class="col-sm-12">
              <div class="input-group">
                <p class='error'><%= show_errors(@user, :introduce) %></p>
                <%= ff.text_area :introduce, autofocus: true, autocomplete: "name", class: "input--style-2", placeholder: t("ex_intr") %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="actions" style="margin-top: 2rem; text-align: right;">
          <%= f.submit t("change"), class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
